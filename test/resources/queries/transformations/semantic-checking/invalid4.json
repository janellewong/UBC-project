{
	"title": "columns should be in group + apply",
	"input": {
		"WHERE": {
			"GT": {
				"courses_avg": 97
			}
		},
		"OPTIONS": {
			"COLUMNS": [
				"courses_title",
				"courses_dept",
				"courses_avg",
				"overallAvg"
			],
			"ORDER": "overallAvg"
		},
		"TRANSFORMATIONS": {
			"GROUP": [
				"courses_title",
				"courses_dept"
			],
			"APPLY": [
				{
					"overallAvg": {
						"AVG": "courses_avg"
					}
				}
			]
		}
	},
	"errorExpected": true,
	"with": "InsightError"
}
